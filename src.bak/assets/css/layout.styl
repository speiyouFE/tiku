@require './config'

*
  box-sizing: border-box
  padding 0;
  margin 0
::-webkit-scrollbar 
    width: 6px;
    height: 7px;
    background: #f8f8f8;
::-webkit-scrollbar-thumb
  background-color:#666;
  border-radius:4px
html,body,#__CHN_APP
  width 100%
  height 100%
body
  padding 0;
  margin 0;
  background #eef1f5
  font-family -apple-system, BlinkMacSystemFont, "Helvetica Neue", "Segoe UI", "Oxygen", "Ubuntu", "Cantarell", "Open Sans", sans-serif
  font-size 14px
  color: #333
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
h1,h2,h3,h4,h5,h6
  padding 0;
  margin 0;
  font-weight 400
ul,li
  padding 0;
  margin 0
  list-style-type none
.nprogress-busy
  pointer-events none;

#nprogress .bar
  background: $success
  top:0px;
  height:2px;

#nprogress .peg
  box-shadow:0 0 0 transparent;

#nprogress .spinner
  position: fixed;
  top:50%;
  left:50%;
  right:auto;
  -webkit-transform: translate(-50%,-50%);
  transform: translate(-50%,-50%);

#nprogress .spinner-icon
  border-top-color $success
  border-left-color $success
  width: 40px;
  height:40px
  border-width:2px
  -webkit-animation: nprogress-spinner 800ms linear infinite;
  animation: nprogress-spinner 800ms linear infinite;

.main-content
  width $contentWidth
  margin 0 auto
.page-content
  padding 10px 0 0 0
th {
  text-align: left;
}
.table {
  width: 100%;
  max-width: 100%;
  margin-bottom: 20px;
}
.table > thead > tr > th,
.table > tbody > tr > th,
.table > tfoot > tr > th,
.table > thead > tr > td,
.table > tbody > tr > td,
.table > tfoot > tr > td {
  padding: 8px;
  line-height: 1.42857143;
  vertical-align: top;
  border-top: 1px solid #e8eaed;
  word-break: break-all;
}
.table > thead > tr > th {
  vertical-align: bottom;
  background: rgba(232, 234, 237, 0.5);
  border-bottom: 1px solid #e8eaed;
}
.table > caption + thead > tr:first-child > th,
.table > colgroup + thead > tr:first-child > th,
.table > thead:first-child > tr:first-child > th,
.table > caption + thead > tr:first-child > td,
.table > colgroup + thead > tr:first-child > td,
.table > thead:first-child > tr:first-child > td {
  border-top: 0;
}
.table > tbody + tbody {
  border-top: 1px solid #e8eaed;
}
.table .table {
  background-color: #fafafa;
}
.table-condensed > thead > tr > th,
.table-condensed > tbody > tr > th,
.table-condensed > tfoot > tr > th,
.table-condensed > thead > tr > td,
.table-condensed > tbody > tr > td,
.table-condensed > tfoot > tr > td {
  padding: 5px;
}
.table-bordered {
  border: 1px solid #e8eaed;
}
.table-bordered > thead > tr > th,
.table-bordered > tbody > tr > th,
.table-bordered > tfoot > tr > th,
.table-bordered > thead > tr > td,
.table-bordered > tbody > tr > td,
.table-bordered > tfoot > tr > td {
  border: 1px solid #e8eaed;
}
.table-bordered > thead > tr > th,
.table-bordered > thead > tr > td {
  border-bottom-width: 2px;
}
.table-striped > tbody > tr:nth-of-type(odd) {
  background-color: #f2f5fd;
}
.table-hover > tbody > tr:hover {
  background-color: #f2f5fd;
}
table col[class*="col-"] {
  position: static;
  float: none;
  display: table-column;
}
table td[class*="col-"],
table th[class*="col-"] {
  position: static;
  float: none;
  display: table-cell;
}
.table-responsive {
  overflow-x: auto;
  min-height: 0.01%;
}